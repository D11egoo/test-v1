#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Verifica si la rama actual es 'main'
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

if [ "$BRANCH_NAME" != "main" ]; then
  echo "Este hook pre-push solo permite hacer push en la rama 'main'."
  exit 1  # Sale con c√≥digo de error para bloquear el push
fi

# Si estamos en la rama 'main', el push puede continuar
echo "Push permitido en la rama 'main'."