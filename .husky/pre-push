#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Verifica si la rama actual es 'main'
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

if [ "$BRANCH_NAME" != "main" ]; then
  echo "Este hook pre-push solo se ejecuta en la rama 'main'."
  exit 0  # Sale sin hacer nada si no est√°s en la rama 'main'
fi